<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <small>Please leave a detailed comment <small>(min: 50 chars)</small></small>
  <br><br>
  <%= f.label :rating %>
  <%= f.number_field :rating, placeholder:'1-5'%>
  <small>Note: rating must be a value between one and five</small>
  <br><br>
  <p><%= f.submit %></p>
<% end %>
